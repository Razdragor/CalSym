{% extends 'baseAdmin.html.twig' %}


{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Prénom</th>
            <th>Nom de famille</th>
            <th>Dernière connexion</th>
            <th>Role</th>
            <th>Action</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
            <td>{{user.firstname}}</td>
            <td>{{user.lastname}}</td>
            <td>{{user.lastlogin|date("Y-m-d à H:i")}}</td>
            <td>{{user.role}}</td>
            <td><a class="btn btn-primary" href="{{ path("admin_editPatientUser", {'id': user.id}) }}">Edit</a></td>
            <td><a class="btn btn-danger" href="{{ path("admin_editPatientUser", {'id': user.id}) }}">Remove</a></td>
        </tr>
        </tbody>
        {%  endfor %}
    </table>

{% endblock %}

